<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.JetpackCompose" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.JetpackCompose.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">#00000000</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.JetpackCompose.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#D0BCFF</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.JetpackCompose.NoActionBar</item>
        <item name="windowSplashScreenAnimationDuration">500</item>
    </style>
</resources>